<html>
  <head>
    
  </head>
  
  <body>
  <%= form_with model: @item, url: admin_items_path do |f| %>
  <table>
   <tr>
     <th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td>
   </tr> 
    
   <tr>
     <th>商品名</th><td><%= f.text_field :name %></td>
   </tr>
   <tr>
     <th>商品説明</th><td><%= f.text_area :introduction %></td>
   </tr>
   <tr><th>ジャンル</th><td><%= f.collection_select(:genre_id, @genres, :id, :item_id, prompt: "選択してください") %></td> 
   </tr>
   <tr>
     <th>税抜価格</th><td><%= f.text_area :price %></td>
   </tr>
   <tr>
     <th>販売ステータス</th><td><%= f.text_area :is_actie %></td>
   </tr>
  </table>
  <%= f.submit 'create' %>
  <% end %>
  
  
  </style>
  </body>
</html>