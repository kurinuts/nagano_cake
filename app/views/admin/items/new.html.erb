<html>
  <head>

  </head>

  <body>
    <div class="new-item">
  <%= form_with model: @item, url: admin_items_path do |f| %>
  <table>
   <tr>
     <th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td>
   </tr>

   <tr>
     <th>商品名</th><td><%= f.text_field :name %></td>
   </tr>
   <tr>
     <th>商品説明</th><td><%= f.text_area :introduction %></td>
   </tr>
   <tr><th>ジャンル</th><td><%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "選択してください") %></td>
   </tr>
   <tr>
     <th>税抜価格</th><td><%= f.number_field :price %>円</td>
   </tr>
   <tr>
     <th>販売ステータス</th>
     <td>
       <%= form_with model: @item, local: true do |f| %>
       <%= f.radio_button :is_active, :true %>
       <%= f.label :is_active, "販売中" %><br />
       <%= f.radio_button :is_active, :false %>
       <%= f.label :is_active, "販売中止" %><br />
       <% end %>
     </td>
   </tr>
  </table>
  <%= f.submit '新規登録' %>
  <% end %>

  </div>

  <style>
  .new-item {
    margin: 100px;
  }
  </style>
  </body>
</html>