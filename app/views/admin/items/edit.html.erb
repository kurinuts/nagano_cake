<hrml>
  <head></head>
  <body>


    <% if @item.errors.any? %>
  <%= @item.errors.count %>件のerrorが発生しました
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

    <div class="container">
      <div class="row">

        <div class="col-md-4">


          <div class="item-image"><%= image_tag @item.image, size: "400x300" %>
          </div>

        </div>
    <div class="col-md-2">
    </div>

    <div class="col-md-6">
      <%= form_with model: @item, url: admin_item_path do |f| %>
    <table>
   <tr>
     <th>商品画像</th><td><%= f.file_field :image, accept: "image/*" %></td>
   </tr>

   <tr>
     <th>商品名</th><td><%= f.text_field :name %></td>
   </tr>
   <tr>
     <th>商品説明</th><td><%= f.text_area :introduction %></td>
   </tr>
   <tr><th>ジャンル</th><td><%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "選択してください") %></td>
   </tr>
   <tr>
     <th>税抜価格</th><td><%= f.text_area :price %></td>
   </tr>
   <tr>
     <th>販売ステータス</th>
     <td>

       <%= f.radio_button :checked, :true %>
       <%= f.label :checked, "販売中" %>
       <%= f.radio_button :checked, :false %>
       <%= f.label :checked, "販売中止" %>

     </td>
   </tr>
  </table>

   <%= f.submit '変更を更新する' %>
    <% end %>


  <style>
    h4 {
      margin-left: 50px;
      margin-top: 50px;
    }

    span {
      margin-left: 50px;
    }
    
  </style>
  </div>
  </div>
  </div>
  </div>

  </body>
</hrml>