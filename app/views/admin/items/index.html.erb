
<html>
  <head></head>
  <body>
 
    <div class="container">
      <div class="row">
        
        <div class="col-md-10">
          <h4>商品一覧</h4>
          <table class ="table">
            <tr>
            <th>ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            </tr>
            <tr>
            <% @items.each do |item| %>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>            
            <td><%= item.is_active %></td>
            <td><%= link_to "Edit", edit_admin_item_path(item), class: "btn btn-success" %></td>
            </tr>
            <% end %>
          </table>
    
    </div>
    </div>
    </div>
    </div>
    
    <style>
    h4 {
      margin: 50px;
      }
    </style>
  

  </body>
</html>