
<html>
  <head></head>
  <body>

    <div class="container">
      <div class="row">

        <div class="col-md-10">
          <table class ="table">
            <tr>
            <th>ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
            </tr>
            <tr>
            <% @items.each do |item| %>
            <td><%= item.id %></td>
            <td><%= link_to admin_item_path(item) do %><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
              <% if item.is_active %>
              販売中
              <% else %>
              販売中止
              <% end %>
            </td>
            <td><%= link_to "Edit", edit_admin_item_path(item), class: "btn btn-success" %></td>
            </tr>
            <% end %>
            <% end %>
          </table>
          <%= paginate @items %>

    </div>
    </div>
    </div>
    </div>
    <div class="btn"><%= link_to "New Item", new_admin_item_path, class: "btn btn-danger" %></btn>

    <style>
    h4 {
      margin: 50px;
      }

    .btn {
      margin-left: 30px;
    }
    </style>


  </body>
</html>