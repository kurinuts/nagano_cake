<html>
  <head></head>
  <body>
    <%= form_with model: @item do |f| %>
    <div class="container">
      <div class="row">
        
        <div class="col-md-4">
          <h4>商品詳細</h4>
          
          <div class="item-image"><%= @item.image %>
          </div>
        </div>
          
        <div class="col-md-2">
        </div>
        
        <div class="col-md-6">
          <table class ="table">
            <tr>
              <th>ID</th><td><%= @item.id %></td>
            </tr>
            <tr>
              <th>商品名</th><td><%= @item.name %></td>
            </tr>
            <tr>
              <th>税抜価格</th> <td><%= @item.price %></td>
            </tr>
            <tr>
              <th>ジャンル</th><td><%= @item.genre.name %></td>    
            </tr>
            <tr>
              <th>ステータス</th><td><%= @item.is_active %></td>
            </tr>
          </table>
          <%= link_to "Edit", edit_admin_item_path(@item), class: "btn btn-success" %>
            <% end %>
    
    </div>
    </div>
    </div>
    </div>
    
    <style>
    h4 {
      margin: 50px;
      background-color: tan;
      text-align: center;
      color: white;
      }
      
    .table {
      margin-top: 100px;
    } 
    </style>
  

  </body>
</html>