<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <h4>注文履歴一覧</h4>
        <thead>
          <tr>
           <th>購入日時</th>
           <th>購入者</th>
           <th>注文個数</th>
           <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
           <td>
           <%= link_to admin_order_path(order) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %><% end %>
           </td>
           <td><%= order.customer.last_name %><%= order.customer.first_name %>様</td>
           <td><%= order.order_details.sum(:amount) %></td>
           <td><%= Order.orders_statuses_i18n[order.orders_status] %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  <%= paginate @orders %>

  <style>
    .table {
      width:100%;
      item-align: center;
    }
  </style>