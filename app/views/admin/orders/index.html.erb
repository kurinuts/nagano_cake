<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <div class="col-md-10">
  <table class="index">
    <h4>注文履歴一覧</h4>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <tr>
      <% @orders.each do |order| %>
      <td><%= link_to admin_order_path(order) do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      </td>
      <td><%= order.customer.last_name %><%= order.customer.first_name %>様</td>
      <% order.order_details.each do |order_detail| %>
      <td><%= order_detail.amount %></td>
      <td><%= order.orders_status %></td>
    </tr>
    <% end %>
    <% end %>
    <% end %>
  </table>
  </div>
  </div>
  </div>
  <%= paginate @orders %>

  <style>
    .index {
      width:100%;
      item-align: center;
    }
  </style>