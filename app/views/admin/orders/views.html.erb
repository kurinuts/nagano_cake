<div class="container">  <!-- この行を追加 -->
  <div class="row">
    <div class="col-md-10">
      <h4>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
        様 の注文履歴
      </h4>

      <table class="table">
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
        <tr>
          <td><%= link_to admin_customer_path(@customer), method :get do %><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %><% end %></td>
          <td>
            <%= order.order_details.sum(:amount) %>
          </td>
          <td><%= Order.orders_statuses_i18n[order.orders_status] %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
  <style>
    .table {
      width: 100%;
    }
  </style>