<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h4><%= @customer.last_name %> <%= @customer.first_name %> 様の会員情報編集</h4>
      <table class ="table">
        <%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
        <tr><th>会員ID</th><td><%= @customer.id %></td></tr>
        <tr><th>氏名</th><td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td></tr>
        <tr><th>フリガナ</th><td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana_name %></td></tr>
        <tr><th>郵便番号</th><td><%= f.number_field :postal_code %></td></tr>
        <tr><th>住所</th><td><%= f.text_area :address %></td></tr>
        <tr><th>電話番号</th><td><%= f.number_field :telephone_number %></td></tr>
        <tr><th>メールアドレス</th><td><%= f.text_field :email %></td></tr>
        <tr><th>会員ステータス</th>
        <td>
          <%= form_with model: @customer, local: true do |f| %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会済" %>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効" %>
          <% end %>
        </td>
        </tr>
      </table>
      <%= f.submit '変更を保存' %>
      <% end %>