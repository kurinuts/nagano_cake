        <div class="col-md-12">
          <table class ="table">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
      <tr>
        <% @customers.each do |customer| %>
        <td><%= customer.id %></td>
        <td><%= link_to admin_customer_path(customer) do %><%= customer.last_name %><%= customer.first_name %><% end %></td>
        <td><%= customer.email %></td>
        <td>
        <% if customer.is_deleted %>
        退会済
        <% else %>
        有効
        <% end %></td>
      </tr>
      <% end %>
    </table>
