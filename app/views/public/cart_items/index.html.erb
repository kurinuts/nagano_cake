<html>
  <head>
      <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>


  <body>
    <div class="container">  <!-- この行を追加 -->
    <div class="row">
      <div class="col-md-4">
        <h1>Customer info</h1>
        <table class="table">
          <tr><th>お名前</th><td><%= @customer.last_name %><%= @customer.first_name %>様</td></tr>
          <tr><th>メールアドレス</th><td><%= @customer.email %></td></tr>
          </table>
        <%= link_to edit_customer_path(@customer), class: "btn btn-secondary btn-block" do %>
        <i class="fas fa-user-cog fa-lg"></i>
        <% end %>

<!--link_toはデフォルトがGET なのでメソッドの指定はしないのが正解。deleteはメソッド指定が必要な場合もある-->

    </div>
    <div class="col-md-1">
      </div>

       <div class="col-md-7">
         <h1>Cart_items</h1>

           <table class="table">
           <tr>
             <th>image name</th>
             <th>単価</th>
             <th>数量</th>
             <th>小計</th>
             <th>delete</th>
            </tr>
            <tr>
              <% @cart_items.each do |cart_item| %>
              <td><%= image_tag cart_item.item.image, size: "60x50" %>
             <%= cart_item.item.name %></td>
             <td><%= cart_item.item.with_tax_price%></td>
             <td><%= cart_item.amount %><br>
             変更</td>
             <td><%= cart_item.subtotal%></td>
             <td><%= link_to "Destroy", cart_item_path(cart_item), method: :delete, class: "btn btn-danger btn-block" %>
             </td>
             <!--< @total_price += cart_item.subtotal >-->
           </tr>
           <% end %>
         </table>

          <%= link_to "買い物を続ける", items_path %>
          <%= link_to "情報入力に進む", new_order_path %>

      </div>
     </div>
     </div>

  </body>

 </html>