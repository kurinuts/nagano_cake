<div class="edit">
<h1>Edit Customer</h1>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のerrorが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>




<% if @customer == current_customer %>
<%= form_with model: @customer do |f| %>

<table class="customer-information">
  <tr>
    <th>氏名</th><td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
  </tr>

  <tr>
    <th>フリガナ</th><td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
  </tr>

  <tr>
    <th>メールアドレス</th><td><%= f.email_field :email, autocomplete: "email" %></td>
  </tr>

  <tr>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>

    <th>パスワード</th><td><%= f.password_field :password %></td>
  </tr>

  <tr>
    <th>パスワード確認</th><td><%= f.password_field :password_confirmation %></td>
  </tr>

  <tr>
    <th>郵便番号</th><td><%= f.number_field :postal_code %></td>
  </tr>

  <tr>
    <th>住所</th><td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <th>電話番号</th><td><%= f.number_field :telephone_number %></td>
  </tr>

</table>
<%= f.submit '変更内容を保存する', class: "btn btn-outline-success" %><% end %><%= link_to '退会する', customer_unsubscribe_path(@customer), method: :get, class: "btn btn-outline-danger" %>
<% end %>
</div>


