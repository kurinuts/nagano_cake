<h1>Edit Customer</h1>
<% if @customer.errors.any? %>
  <%= @customer.errors.count %>件のerrorが発生しました
  <ul>
    <% @customer.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>




<% if @customer == current_customer %>
<%= form_with model: @customer do |f| %>

<table>
  <tr>
    <th>last_name</th>
    <th>first_name</th>
  </tr>
  <tr>
    <td>
      <div class="field">
        <%= f.text_field :last_name %>
  </div>
    </td>
    <td>
      <div class="field">
        <%= f.text_field :first_name %><br>
  </div>
    </td>
  </tr>

  <tr>
    <th>last_name_kana</th>
    <th>first_name_kana</th>
  </tr>
  <tr>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>
  
  <tr>
    <th>email</th>
  </tr>
  <tr>
    <td><%= f.email_field :email, autocomplete: "email" %></td>
  </tr>
  
  <tr>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>
    
    <th>password</th>
  </tr>
  <tr>
    <td><%= f.password_field :password %></td>
  </tr>
  
  
  <tr>
    <th>password_confirmation</th>
  </tr>
  <tr>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>
  
  <tr>
    <th>postal_code</th>
  </tr>
  <tr>
    <td><%= f.number_field :postal_code %></td>
  </tr>
  
  <tr>
    <th>address</th>
  </tr>
  <tr>
    <td><%= f.text_field :address %></td>
  </tr>
  
  <tr>
    <th>telephone_number</th>
  </tr>
  <tr>
    <td><%= f.number_field :telephone_number %></td>
  </tr>
</table>
<%= f.submit 'Update Customer' %>
 <% end %>
 <% end %>