<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


<table>
  <tr>
    <th>（姓）</th>
    <th>（名）</th>
  </tr>
  <tr>
    <td>
      <div class="field">
        <%= f.text_field :last_name %>
  </div>
    </td>
    <td>
      <div class="field">
        <%= f.text_field :first_name %><br>
  </div>
    </td>
  </tr>

  <tr>
    <th>（姓）カナ</th>
    <th>（名）カナ</th>
  </tr>
  <tr>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
  </tr>
  <tr>
    <td><%= f.email_field :email, autocomplete: "email" %></td>
  </tr>

  <tr>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br>

    <th>パスワード</th>
  </tr>
  <tr>
    <td><%= f.password_field :password %></td>
  </tr>


  <tr>
    <th>パスワード確認</th>
  </tr>
  <tr>
    <td><%= f.password_field :password_confirmation %></td>
  </tr>

  <tr>
    <th>郵便番号</th>
  </tr>
  <tr>
    <td><%= f.number_field :postal_code %></td>
  </tr>

  <tr>
    <th>住所</th>
  </tr>
  <tr>
    <td><%= f.text_field :address %></td>
  </tr>

  <tr>
    <th>電話番号</th>
  </tr>
  <tr>
    <td><%= f.number_field :telephone_number %></td>
  </tr>

</table>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "public/shared/error_messages", resource: resource %>


