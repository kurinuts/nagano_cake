
 <div class="container">
  <div class="row">
    <div class="col-md-5">
<%= form_with model: @address, url: addresses_path do |f| %>
<table class="table">
  <tr>
    <th>郵便番号（ハイフンなし）</th>
    <td><%= f.number_field :postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= f.text_field :address %></td>
  </tr>
  <tr>
    <th>宛名</th>
    <td><%= f.number_field :name %></td>
  </tr>
  </table>
   <%= f.submit '新規登録', class: "btn btn-success" %>

  <% end %>
</div>


  <div class="col-md-7">

  <table class ="table">
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
      <%= link_to "削除する", addresses_path(address), method: :delete, class: "btn btn-danger" %></td>
    </tr>
    <% end %>
  </table>

  </div>
</div>

  <style>
    .table {
      width: 100%%;
    }
  </style>