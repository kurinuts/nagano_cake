<div class="container">  <!-- この行を追加 -->
    <div class="row">
      <div class="col-md-6">
    <h4>注文情報</h4>
    <table border="1" cellpadding="10">
    <tr><th>注文日</th><td><%= @order.created_at.strftime('%Y/%m/%d') %></td></tr>
    <tr><th>配送先</th><td>〒<%= @order.sent_code %><br>
    <%= @order.sent_address %><br>
    <%= @order.sent_name %> 様</td></tr>
    <tr><th>支払方法</th><td>
    <% if @order.credit_card? %>
    <p>クレジットカード</p>
    <% else %>
    <p>銀行振込</p>
    <% end %></td></tr>
    <tr><th>ステータス</th><td><%= @order.orders_status %></td></tr>
</table>

<table class="bottom" border="1" cellpadding="10">
    <h4>注文内容</h4>
    <tr>
    <th>商品</th>
    <th>単価（税抜）</th>
    <th>個数</th>
    <th>小計（税抜）</th>
    </tr>
    <% @order.order_details.each do |order_detail| %>
    <tr>
    <td><%= order_detail.item.name %></td>
    <td><%= order_detail.item.price %> 円</td>
    <td><%= order_detail.amount %></td>
    <td><%= order_detail.amount * order_detail.item.price %> 円</td>
    </tr>
    <% end %>
</table>

</div>
 <div class="col-md-6">
<h4>請求情報</h4>
<table border="1" cellpadding="10">
    <tr><th>商品合計</th><td><%= @order.payment %> 円</td></tr>
    <tr><th>配送料</th><td>800 円</td></tr>
    <tr><th>請求金額</th><td><%= @order.payment + @order.postage %> 円</td></tr>
</table>
</div>
</div>
</div>



<style>
.h4 {
    margin-top: 50px;
}

</style>