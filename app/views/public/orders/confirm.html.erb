
<h2>注文情報確認</h2>
<%= form_with model: @order do |f| %>
<div class="container">
  <div class="row">
    <div class="col-md-9">

<table>
  <tr>
    <th></th>
    <th>商品名</th>
    <th>単価（税込</th>
    <th>数量</th>
    <th>小計</th>
  </tr>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= image_tag cart_item.item.image, size: "50x40" %></td>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.price %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.subtotal%></td>
  </tr>
  <% end %>
</table>
</div>
<div class="col-md-3">
<table>
  <tr>
    <th>送料</th>
    <td><%= @order.postage %>円</td>
  </tr>
  <tr>
    <th>商品合計</th>
    <% @cart_items.each do |cart_item| %>
    <% @total +=  cart_item.subtotal %>
    
    <% end %>
    <td><%= @total %>円</td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @total + @order.postage %>円</td>
    <!--<td><= @l_total +=  (cart_item.item.price * 1.1).floor * cart_item.amount + 800 ></td>-->
  </tr>

</table>


</div>
</div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-7">

</div>
<div class="col-md-5">
  <table>
    <tr><th><h4>支払方法</h4></th><td></td><td><%= @order.payment_method %></td></tr>
    <tr><th><h4>お届け先</h4></th><td></td><td>〒<%= @order.sent_code %> <%= @order.sent_address %><br>
    <%= @order.sent_name %></td></tr>
  </table>
  <%= f.submit "注文を確定する" %>
  <% end %>
    
</div>
</div>

<style>
  h2 {
    item-align: center;
    text-align: center;
    margin-left: 50px;
    background-color: tan;
  }

  h4 {
    margin-top: 30px;
  }


</style>